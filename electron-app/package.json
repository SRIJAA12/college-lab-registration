{
  "name": "college-lab-registration-app",
  "version": "1.0.0",
  "description": "College Lab Registration Desktop Application",
  "main": "dist-electron/main.js",
  "homepage": "./",
  "private": true,
  "scripts": {
    "start": "react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "electron": "tsc -p electron && electron .",
    "electron-dev": "concurrently \"npm start\" \"wait-on http://localhost:3000 && tsc -p electron && electron .\"",
    "build-electron": "npm run build && tsc -p electron",
    "dist": "npm run build-electron && electron-builder",
    "pack": "npm run build-electron && electron-builder --dir",
    "preelectron-pack": "npm run build",
    "electron-pack": "electron-builder"
  },
  "build": {
    "appId": "com.college.lab-registration",
    "productName": "College Lab Registration",
    "copyright": "Copyright Â© 2025 College Lab System",
    "directories": {
      "output": "dist"
    },
    "files": [
      "build/**/*",
      "dist-electron/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "msi",
          "arch": ["x64"]
        }
      ],
      "icon": "public/icon.ico",
      "publisherName": "College Lab System",
      "requestedExecutionLevel": "asInvoker"
    },
    "mac": {
      "target": "dmg",
      "icon": "public/icon.icns"
    },
    "linux": {
      "target": "AppImage",
      "icon": "public/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Lab Registration"
    }
  },
  "dependencies": {
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "axios": "^1.3.0",
    "bootstrap": "^5.2.3",
    "@fortawesome/fontawesome-free": "^6.3.0"
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "@types/react-dom": "^18.0.0",
    "typescript": "^4.9.0",
    "electron": "^22.0.0",
    "electron-builder": "^23.6.0",
    "concurrently": "^7.6.0",
    "wait-on": "^7.0.1",
    "react-scripts": "5.0.1",
    "node-machine-id": "^1.1.12",
    "systeminformation": "^5.17.0"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
